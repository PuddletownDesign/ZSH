# apt package manager shortcuts
# Update all binaries and apps installed through apt

alias clean='sudo apt autoremove -y'
alias alsall='apt list'
alias as='apt search'
alias als='apt list --installed'
alias aold='apt list --upgradeable'
alias ain='apt show'


alias a='sudo apt'
alias ai='sudo apt update && sudo apt install -y'
alias au='sudo apt update && sudo apt-purge'

